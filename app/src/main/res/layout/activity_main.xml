<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="24dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nbrtotal_question"
        android:text="Total Questions "
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        tools:ignore="HardcodedText" />


    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/choices_layout"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="Question?"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/choices_layout"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/rep_A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="@color/teal_700"
            android:text="reponse A"
            android:textColor="@color/black"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <Button
            android:id="@+id/rep_B"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="@color/teal_700"
            android:text="reponse B"
            android:textColor="#000000"
            tools:ignore="HardcodedText,TextContrastCheck,TextContrastCheck,TextContrastCheck" />

        <Button
            android:id="@+id/rep_C"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="@color/teal_700"
            android:text="reponse C"
            android:textColor="@color/black"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <Button
            android:id="@+id/rep_D"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="@color/teal_700"
            android:text="reponse D"
            android:textColor="#000000"
            tools:ignore="HardcodedText,TextContrastCheck" />

    </LinearLayout>

    <Button
        android:id="@+id/suiv_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/choices_layout"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/purple_200"
        android:text="Suivant"
        android:textColor="#311B92"
        tools:ignore="HardcodedText" />

</RelativeLayout>
